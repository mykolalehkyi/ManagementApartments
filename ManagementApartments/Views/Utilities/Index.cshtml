@model IEnumerable<ManagementApartments.Data.Models.Utility>

@{
    ViewData["Title"] = "Index";
}

<h1>Utilities</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create","Utilities", new {apartmentId = ViewBag.ApartmentId })">Create New</a>
</p>
<table id="utilitiesTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UtilityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UtilityType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" href="@Url.Action("Edit","Apartments", new {id = ViewBag.ApartmentId })">Back to Apartment</a>
</div>

@section scripts{
    <script src="~/js/Utilities/UtilitiesIndexController.js"></script>
}