{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "wwwroot/js/",
    "skipLibCheck": true
  },
  "include": [
    "wwwroot/js/**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    "wwwroot/lib/**/*"
  ],
  "compileOnSave": true
}
